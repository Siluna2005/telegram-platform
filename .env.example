# TELEGRAM BOTS
# ═══════════════════════════════════════════════════════════════════════════════

# Get from @BotFather
STORAGE_BOT_TOKEN=your_storage_bot_token_here
CONTROL_BOT_TOKEN=your_control_bot_token_here
STREAMING_BOT_TOKEN=your_streaming_bot_token_here

# Storage channel (create private channel, add bot as admin, get ID)
STORAGE_CHANNEL_ID=-1001234567890

# ═══════════════════════════════════════════════════════════════════════════════
# BACKEND
# ═══════════════════════════════════════════════════════════════════════════════

BACKEND_URL=http://localhost:8000
PORT=8000

# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_NAME=telegram_media_platform

# Security
API_KEY=your-secret-api-key-here
JWT_SECRET=your-secret-jwt-key-here

# Admin
ADMIN_TELEGRAM_ID=your_telegram_id_here
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password

# ═══════════════════════════════════════════════════════════════════════════════
# TMDB (Optional - for metadata)
# ═══════════════════════════════════════════════════════════════════════════════

TMDB_API_KEY=your_tmdb_api_key_here